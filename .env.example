# ====================================
# AXS360 - FRONTEND ENVIRONMENT VARIABLES
# ====================================

# API Configuration
VITE_API_URL=http://localhost:3001/api

# Stripe Configuration (Frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
VITE_APP_NAME=AXS360
VITE_APP_VERSION=2.0.0

# Environment
NODE_ENV=development

# Development Settings
VITE_ENABLE_DEVTOOLS=true

# ====================================
# BACKEND ENVIRONMENT VARIABLES
# (Required for full-stack development)
# ====================================

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/axs360?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d

# Twilio Configuration (OTP/SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Configuration (Backend)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:5173

# QR Code Configuration
QR_SECRET=your-qr-secret-key-for-generating-codes

# ====================================
# PRODUCTION DEPLOYMENT VARIABLES
# ====================================

# Production API (uncomment for production)
# VITE_API_URL=https://your-production-api.com/api
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_key_here

# Production Database
# MONGODB_URI=mongodb+srv://prod-user:prod-pass@production-cluster.mongodb.net/axs360-prod

# Production Stripe
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
# STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Production CORS
# CORS_ORIGIN=https://your-frontend-domain.com
